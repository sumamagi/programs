package polynomial_eqution;
import java.util.Scanner;

public class polynomial {

	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		
		double a,b,c,d,r1,r2;
System.out.println("Enter the value of a in a quadratic equation");
a=sc.nextInt();
System.out.println("Enter the value of b in a quadratic equation");
b=sc.nextInt();
System.out.println("Enter the value of c in a quadratic equation");
c=sc.nextInt();
d=b*b-4*a*c;

if(d>0)
{
	r1=-b+Math .sqrt(d)/2*a;
	r2=-b-Math.sqrt(d)/2*a;
	System.out.println("root1=" +r1);
	System.out.println("root2=" + r2);
}
	else if(d==0)
	{
		r1=-b/2*a;
		System.out.println("both roots are equal and the value is" +r1);
		
	}
	else
	
		System.out.println("roots are imaginary");
}


}



output;

Enter the value of a in a quadratic equation
2
Enter the value of b in a quadratic equation
8
Enter the value of c in a quadratic equation
1
root1=-0.5166852264521173
root2=-15.483314773547882













