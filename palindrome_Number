package qustines_1;

import java.util.Scanner;

public class Palindrom_Number {

	public static void main(String[] args) {
		int num,rem,sum=0,var;
		Scanner sc=new Scanner(System.in);
		System.out.print("Enter the number;");
		num=sc.nextInt();
		var=num;
		while(num!=0) {
			rem=num%10;
			sum=sum*10+rem;
		num	=num/10;
		}
		if(sum==var) {
			System.out.print(var+" is a pailndrom number");

		}
		else {
			System.out.print(var+"  is not pailndrom number");

		}

	}

}

output;
Enter the number;
34543
34543is a pailndrom number
