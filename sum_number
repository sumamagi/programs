import java .util.Scanner;
public class sum_numbers {

	public static void main(String[] args) {
		int n,sum=0;
		Scanner sc =new Scanner(System.in);
		System.out.print("Enter the number:");
		 n=sc.nextInt();
		 for (int i=1;i<=n;i++) {
		 		sum=sum+i;
		 }
		
		System.out.println("sum of:"+n+" is ="+sum);
	}
	

}

output;

Enter the number
50
sum of:50 is =1275
