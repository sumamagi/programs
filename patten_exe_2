package patten4;

public class patten4 {

	public static void main(String[] args) {
	int n=9;
	for(int i=1; i<=n; i++) {
		int p=1;
		for(int j=i; j<=n; j++) {
			System.out.print(" ");
		}
		for(int j=1;j<i;j++) {
			System.out.print(p++ +""); 
			
		}
			for (int j=1;j<=i;j++) {
				System.out.print(p-- +"");
			}
		
	System.out.println();
	}
	
	}

}
output;
         1
        121
       12321
      1234321
     123454321
    12345654321
   1234567654321
  123456787654321
 12345678987654321
